<% layout("/layouts/boilerplate") %>

<div class="container-fluid p-0" style="height: 100vh; margin: 0">
  <div class="row g-0" style="height: 100vh; margin: 0">
    <!-- Left side: Image -->
    <div class="col-md-6 d-none d-md-block left-side full-vh">
      <img
        src="/images/photo2.png"
        alt="Travel"
        class="img-fluid img-cover"
        style="width: 100%; height: 100vh; object-fit: cover; display: block"
      />
    </div>

    <!-- Right side: Signup form -->
    <div
      class="col-md-6 d-flex flex-column justify-content-center align-items-center right-side full-vh"
    >
      <div class="w-75" style="max-width: 500px">
        <h2 class="mb-4 text-center">
          Welcome to NomadNest — Let’s Get Started!
        </h2>

        <form
          action="/signup"
          method="POST"
          class="needs-validation"
          novalidate
        >
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
          </div>

          <button type="submit" class="btn btn-dark w-100">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
