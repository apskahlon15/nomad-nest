<% layout("/layouts/boilerplate") %>

<h2>Edit Listing</h2>

<form
  method="POST"
  action="/listings/<%= listing._id %>?_method=PUT"
  class="needs-validation"
  enctype="multipart/form-data"
  novalidate
>
  <div class="form-row col-8 offset-2">
    <div class="form-group mb-3">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="listing[title]"
        value="<%= listing.title %>"
        required
      />
      <div class="valid-feedback">Title is valid</div>
      <div class="invalid-feedback">Please enter valid title</div>
    </div>

    <div class="form-group mb-3">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="listing[description]"
        rows="5"
        required
      >
<%= listing.description %></textarea
      >
      <div class="valid-feedback">Description looks good</div>
      <div class="invalid-feedback">Enter a short description</div>
    </div>

    <div class="form-group mb-3">
      <label for="image">Upload New Image</label>
      <input
        type="file"
        class="form-control"
        id="image"
        name="listing[image]"
        value="<%= listing.image.url %>"
      />
    </div>

    <div class="form-group mb-3">
      <label for="price">Price</label>
      <input
        type="text"
        class="form-control"
        id="price"
        name="listing[price]"
        value="<%= listing.price %>"
        required
      />
      <div class="valid-feedback">Price looks good</div>
      <div class="invalid-feedback">Please enter valid price</div>
    </div>

    <div class="form-group mb-3">
      <label for="country">Country</label>
      <input
        type="text"
        class="form-control"
        id="country"
        name="listing[country]"
        value="<%= listing.country %>"
        required
      />
      <div class="valid-feedback">Country looks good</div>
      <div class="invalid-feedback">Please enter country</div>
    </div>

    <div class="form-group mb-3">
      <label for="location">Location</label>
      <input
        type="text"
        class="form-control"
        id="location"
        name="listing[location]"
        value="<%= listing.location %>"
        required
      />
      <div class="valid-feedback">Locations looks good</div>
      <div class="invalid-feedback">Please enter location</div>
    </div>

    <button type="submit" class="btn btn-dark">Edit Listing</button>
  </div>
</form>
