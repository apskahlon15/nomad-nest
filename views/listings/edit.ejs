<% layout("/layouts/boilerplate") %>

<h2>Edit Listing</h2>

<form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
  <div class="form-row col-8 offset-2">
    <div class="form-group mb-3">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="listing[title]"
        value="<%= listing.title %>"
        required
      />
    </div>

    <div class="form-group mb-3">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="listing[description]"
        rows="5"
        required
      >
<%= listing.description %></textarea
      >
    </div>

    <div class="form-group mb-3">
      <label for="image">Image Link</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="listing[image]"
        value="<%= listing.url %>"
      />
    </div>

    <div class="form-group mb-3">
      <label for="price">Price</label>
      <input
        type="text"
        class="form-control"
        id="price"
        name="listing[price]"
        value="<%= listing.price %>"
      />
    </div>

    <div class="form-group mb-3">
      <label for="country">Country</label>
      <input
        type="text"
        class="form-control"
        id="country"
        name="listing[country]"
        value="<%= listing.country %>"
      />
    </div>

    <div class="form-group mb-3">
      <label for="location">Location</label>
      <input
        type="text"
        class="form-control"
        id="location"
        name="listing[location]"
        value="<%= listing.location %>"
      />
    </div>

    <button type="submit" class="btn btn-dark">Edit Listing</button>
  </div>
</form>
