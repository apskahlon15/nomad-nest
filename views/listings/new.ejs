<% layout("/layouts/boilerplate") %>
    <h2>Create a new listing</h2>
    <form method="POST" action="/listings">
      <input type="text" name="listing[title]" placeholder="Enter title" />
      <br />
      <br />
      <textarea name="listing[description]" placeholder="Enter Description">
      </textarea>
      <br />
      <br />
      <input
        type="text"
        name="listing[image]"
        placeholder="Enter Image URL or Link"
      />
      <br />
      <br />
      <input type="text" name="listing[price]" placeholder="Enter Price" />
      <br />
      <br />
      <input type="text" name="listing[country]" placeholder="Enter Country" />
      <br />
      <br />
      <input
        type="text"
        name="listing[location]"
        placeholder="Enter Location"
      />
      <br />
      <br />
      <button>Add Listing</button>
    </form>
  </body>
</html>
