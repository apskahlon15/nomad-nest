<% layout("/layouts/boilerplate") %>

<h2 class="text-center mb-4">Create a new listing</h2>

<form method="POST" action="/listings" class="needs-validation" novalidate>
  <div class="form-row col-8 offset-2">
    <!-- Title -->
    <div class="form-group col-md-10 mb-3">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="listing[title]"
        placeholder="Enter title"
        required
      />
      <div class="valid-feedback">Title is valid</div>
      <div class="invalid-feedback">Please enter valid title</div>
    </div>

    <!-- Description -->
    <div class="form-group col-md-10 mb-3">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        id="description"
        name="listing[description]"
        rows="3"
        placeholder="Enter description"
        required
      ></textarea>
      <div class="valid-feedback">Description looks good</div>
      <div class="invalid-feedback">Enter a short description</div>
    </div>

    <!-- Image -->
    <div class="form-group col-md-10 mb-3">
      <label for="image">Image Link</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="listing[image][url]"
        placeholder="Enter image link or leave empty to use default"
      />
    </div>

    <!-- âœ… Price and Country in the SAME row -->
    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price">Price</label>
        <input
          type="text"
          class="form-control"
          id="price"
          name="listing[price]"
          placeholder="Enter price"
          required
        />
        <div class="valid-feedback">Price looks good</div>
        <div class="invalid-feedback">Please enter valid price</div>
      </div>

      <div class="col-md-6">
        <label for="country">Country</label>
        <input
          type="text"
          class="form-control"
          id="country"
          name="listing[country]"
          placeholder="Enter country"
          required
        />
        <div class="valid-feedback">Country looks good</div>
        <div class="invalid-feedback">Please enter country</div>
      </div>
    </div>

    <!-- Location -->
    <div class="form-group col-md-10 mb-4">
      <label for="location">Location</label>
      <input
        type="text"
        class="form-control"
        id="location"
        name="listing[location]"
        placeholder="Enter location"
        required
      />
      <div class="valid-feedback">Locations looks good</div>
      <div class="invalid-feedback">Please enter location</div>
    </div>

    <!-- Button -->
    <div class="form-group col-md-10">
      <button type="submit" class="btn btn-dark">Add listing</button>
    </div>
  </div>
</form>
