<% layout("/layouts/boilerplate") %>
<body>
  <h1 class="text-center my-4 text-black">Discover your nest</h1>

  <div class="container">
    <div class="row justify-content-center">
      <% for (let listing of listings) { %>
      <div class="col-12 col-sm-6 col-md-4 mb-4 d-flex justify-content-center">
        <a
          href="/listings/<%= listing._id %>"
          class="text-decoration-none text-black"
          style="width: 100%; max-width: 320px"
        >
          <div
            class="card-index h-100 text-center border-0"
            style="width: 100%; margin: 0 auto"
          >
            <% if (listing.image.url) { %>
            <img
              src="<%= listing.image.url %>"
              alt="<%= listing.title %>"
              class="card-img-top mx-auto img-fluid"
              style="
                width: 100%;
                max-width: 320px;
                height: 240px;
                object-fit: cover;
                border-radius: 25px;
                display: block;
              "
            />

            <% } else { %>
            <img
              src="https://via.placeholder.com/300x400?text=No+Image"
              alt="No image available"
              class="card-img-top mx-auto img-fluid"
              style="
                height: auto;
                max-height: 320px;
                object-fit: cover;
                border-radius: 25px;
              "
            />
            <% } %>
            <div class="card-body d-flex flex-column text-start">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text mb-2">
                <%= listing.location %>, <%= listing.country %><br />
                $<%= listing.price %> /night
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>

    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center mt-4 flex-wrap">
        <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
        </li>
        <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</body>
