<% if (success && success.length > 0) { %>
<div
  class="alert alert-success alert-dismissible fade show w-50 mx-auto text-center my-3"
  role="alert"
>
  <% success.forEach(msg => { %>
  <div><%= msg %></div>
  <% }) %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
    style="position: absolute; top: 10px; right: 15px"
  ></button>
</div>
<% } %> <% if (error && error.length > 0) { %>
<div
  class="alert alert-danger alert-dismissible fade show w-50 mx-auto text-center my-3"
  role="alert"
>
  <% error.forEach(msg => { %>
  <div><%= msg %></div>
  <% }) %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
    style="position: absolute; top: 10px; right: 15px"
  ></button>
</div>
<% } %>
